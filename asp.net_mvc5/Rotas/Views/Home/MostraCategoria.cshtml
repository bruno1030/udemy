@model IEnumerable<Rotas.Models.Noticia>


@{
    ViewBag.Title = "Categoria";
}

<h2>Categoria: @ViewBag.Categoria</h2>

<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostraNoticia", "Home", new { @noticiaId = item.NoticiaId, @titulo = item.Titulo, @categoria = item.Categoria }, null);

                <b>@Html.DisplayFor(modelItem => item.Data)</b>
            </li>
        }
    </ul>
</div>
