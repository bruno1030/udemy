@model _01_Introducao.Models.Usuario

@{
    ViewBag.Title = "Usuario - efetue seu cadastro";
}

<h2>Usuario</h2>

<br />

<h3>Validacao de usuarios:</h3>
@Html.BeginForm("Cadastrar", "Usuario")

<div class="form-group">
    @Html.LabelFor(u => u.Nome)
    @Html.TextBoxFor(u => u.Nome)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Observacoes)
    @Html.TextBoxFor(u => u.Observacoes)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Idade)
    @Html.TextBoxFor(u => u.Idade)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Email)
    @Html.TextBoxFor(u => u.Email)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Login)
    @Html.TextBoxFor(u => u.Login)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Senha)
    @Html.TextBoxFor(u => u.Senha)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.ConfirmarSenha)
    @Html.TextBoxFor(u => u.ConfirmarSenha)
</div>

<input type="submit" name="btnCadastrarUsuario" value="Cadastrar Usuario" />

